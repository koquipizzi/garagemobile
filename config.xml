<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "garage.mobile"
        versionCode="10" 
        version   = "1.0">

    <!-- versionCode is optional and Android only -->

    <name>El Garage TV</name>

    <description>
        El Garage TV - Mobile App
    </description>

    <author href="https://www.qwavee.com" email="alejandra@qwavee.com">
        Qwavee - Desarrollos de Sistemas
    </author>
    <!-- to enable individual permissions use the following examples -->
    <feature name="http://api.phonegap.com/1.0/battery"/>
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>

    <preference name="fullscreen" value="true" />
    <preference name="splash-screen-duration" value="5000" />
	<preference name="phonegap-version" value="2.9.0" /> 
	
    <gap:splash src="splash.png" />
	<gap:splash src="splash/splash-screen-320x460.png" width="320" height="480" />
	<icon src="icon.png" default="true" />
	
	<gap:splash src="splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="splash/ios/Default_at_2x.png" gap:platform="ios" width="640" height="960" />
	<gap:splash src="splash/ios/Default_iphone5.png" gap:platform="ios" width="640" height="1136" />
	<gap:splash src="splash/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="748" />
	<gap:splash src="splash/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1004" />
	<gap:splash src="splash/ios/Default-Landscape_at_2x.png" gap:platform="ios" width="2048" height="1496" />
	<gap:splash src="splash/ios/Default-Portrait_at_2x.png" gap:platform="ios" width="1536"	height="2008" />
	
	<icon src="splash/ios/icons/touch-icon-iphone-60x60-precomposed.png" gap:platform="ios" width="57" height="57" />
	<!--icon src="icons/ios/icon-57_at_2x.png" gap:platform="ios" width="114" height="114" /-->
